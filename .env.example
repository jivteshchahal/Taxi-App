# Copy this file to .env and fill in values

# App
PORT=3000
NODE_ENV=development

# SMTP (Required)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
# true for TLS/SSL (port 465), false for STARTTLS/others (e.g., 587/2525)
SMTP_SECURE=false
SMTP_USER=YOUR_SMTP_USERNAME
SMTP_PASS=YOUR_SMTP_PASSWORD

# Admin (Required)
ADMIN_EMAIL=admin@example.com

# Booking options
# Set to true to CC customer on booking email
BOOKING_CC_CUSTOMER=false

# Optional: CORS origin (leave empty to allow same-origin only)
# CORS_ORIGIN=

