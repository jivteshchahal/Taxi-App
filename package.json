{
  "name": "taxi-booking",
  "version": "1.0.0",
  "description": "A small production-ready Taxi Booking web app with Node.js, Express, EJS, Tailwind, and Nodemailer.",
  "main": "src/server.js",
  "scripts": {
    "dev": "concurrently \"tailwindcss -i ./src/styles/tailwind.css -o ./public/assets/app.css --watch\" \"nodemon src/server.js\"",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/assets/app.css --minify",
    "start": "node src/server.js"
  },
  "keywords": [
    "node",
    "express",
    "ejs",
    "tailwind",
    "nodemailer",
    "taxi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.4",
    "tailwindcss": "^3.4.10"
  },
  "engines": {
    "node": ">=18"
  }
}

